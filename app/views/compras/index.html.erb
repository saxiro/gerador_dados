<p id="notice"><%= notice %></p>

<h1>Compras</h1>

<table>
  <thead>
    <tr>
      <th>Idade</th>
      <th>Sexo</th>
      <th>Estado civil</th>
      <th>Cidade</th>
      <th>Bairro</th>
      <th>Estado</th>
      <th>Produto</th>
      <th>Preco</th>
      <th>Estabelecimento</th>
      <th>Data da Compra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.idade %></td>
        <td><%= compra.sexo %></td>
        <td><%= compra.estado_civil %></td>
        <td><%= compra.cidade %></td>
        <td><%= compra.bairro %></td>
        <td><%= compra.estado %></td>
        <td><%= compra.produto %></td>
        <td><%= compra.preco %></td>
        <td><%= compra.estabelecimento %></td>
        <td><%= compra.data_compra.to_time.strftime('%d/%m/%Y') %></td>
        <td><%= link_to 'Show', compra %></td>
        <td><%= link_to 'Edit', edit_compra_path(compra) %></td>
        <td><%= link_to 'Destroy', compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Compra', new_compra_path %>
